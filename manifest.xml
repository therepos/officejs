<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="MailApp">

  <Id>7f1a9b06-1d1c-4f3a-9a6d-6a3c8f2a4b0e</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Org</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="OfficeJS Tools"/>
  <Description DefaultValue="Outlook button to format tables."/>
  <IconUrl DefaultValue="https://therepos.github.io/officejs/assets/outlook/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://therepos.github.io/officejs/assets/outlook/icon-80.png"/>
  <SupportUrl DefaultValue="https://therepos.github.io/officejs/"/>

  <AppDomains>
    <AppDomain>https://therepos.github.io</AppDomain>
  </AppDomains>

  <!-- Command-only: block older clients by requiring Mailbox >= 1.3 -->
  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <VersionOverrides xsi:type="VersionOverridesV1_1">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox" MinVersion="1.3"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host Name="Mailbox">
        <ExtensionPoint xsi:type="MessageComposeCommandSurface">
          <OfficeTab id="TabDefault">
            <Group id="grpOutlook" label="Outlook Tools">
              <Control xsi:type="Button" id="btnFormatTables">
                <Label resid="outlookLabel"/>
                <Supertip>
                  <Title resid="outlookLabel"/>
                  <Description resid="outlookDesc"/>
                </Supertip>
                <Icon>
                  <bt:Image size="16" resid="outlookIcon16"/>
                  <bt:Image size="32" resid="outlookIcon32"/>
                  <bt:Image size="80" resid="outlookIcon80"/>
                </Icon>
                <Action xsi:type="ExecuteFunction">
                  <FunctionName>formatTables</FunctionName>
                </Action>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </Host>
    </Hosts>

    <!-- Map the command to your function file -->
    <FunctionFile resid="outlookFunctions"/>

    <Resources>
      <bt:Images>
        <bt:Image id="outlookIcon16" DefaultValue="https://therepos.github.io/officejs/assets/outlook/icon-16.png"/>
        <bt:Image id="outlookIcon32" DefaultValue="https://therepos.github.io/officejs/assets/outlook/icon-32.png"/>
        <bt:Image id="outlookIcon80" DefaultValue="https://therepos.github.io/officejs/assets/outlook/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="outlookFunctions" DefaultValue="https://therepos.github.io/officejs/src/outlook/formatTables.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="outlookLabel" DefaultValue="Format Tables"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="outlookDesc" DefaultValue="Apply 1pt light-grey borders and 0.1in padding to all tables."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
